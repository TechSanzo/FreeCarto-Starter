{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    // Cache control for favicon
    {
      "src": "/favicon.ico",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    // SPA fallback rule
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
